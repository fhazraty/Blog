@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Hero Section -->
<section class="bg-light py-5 text-center">
    <div class="container">
        <h2>@ViewBag.CMSMainHeader</h2>
        <p class="text-muted">@ViewBag.CMSMainHeaderText</p>
    </div>
</section>

<!-- CMS Posts -->
<section class="container py-5">
    <div class="row">
        <!-- Post 1 -->
        <div class="col-md-4">
            <div class="card mb-4">
                <img src="@ViewBag.Pic1" class="card-img-top" alt="Post 1">
                <div class="card-body">
                    <h5 class="card-title">@ViewBag.Pic1Title</h5>
                    <p class="card-text text-muted">@ViewBag.Pic1TitleDesc</p>
                    <a href="@ViewBag.Pic1Link" class="btn btn-primary">ادامه</a>
                </div>
            </div>
        </div>
        <!-- Post 2 -->
        <div class="col-md-4">
            <div class="card mb-4">
                <img src="@ViewBag.Pic2" class="card-img-top" alt="Post 2">
                <div class="card-body">
                    <h5 class="card-title">@ViewBag.Pic2Title</h5>
                    <p class="card-text text-muted">@ViewBag.Pic2TitleDesc</p>
                    <a href="@ViewBag.Pic2Link" class="btn btn-primary">ادامه</a>
                </div>
            </div>
        </div>
        <!-- Post 3 -->
        <div class="col-md-4">
            <div class="card mb-4">
                <img src="@ViewBag.Pic3" class="card-img-top" alt="Post 3">
                <div class="card-body">
                    <h5 class="card-title">@ViewBag.Pic3Title</h5>
                    <p class="card-text text-muted">@ViewBag.Pic3TitleDesc</p>
                    <a href="@ViewBag.Pic3Link" class="btn btn-primary">ادامه</a>
                </div>
            </div>
        </div>
    </div>
</section>