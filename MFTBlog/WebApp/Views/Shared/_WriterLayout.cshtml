<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- لینک به Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
	<link href="~/css/admincss.css" rel="stylesheet" />
    @RenderSection("HeaderCSS",false)
</head>
<body>
    <!-- نوار کناری -->
    <div class="container-fluid">
        <div class="row" style="height:100vh;">
            <nav class="col-md-3 col-lg-2 d-md-block sidebar">
                <div class="text-center py-3">
                    <h4>پنل مدیریت</h4>
                </div>
                <ul class="list-unstyled">
                    <li><a href="../../Writer/Index" id="dashboardItem"><i class="fas fa-tachometer-alt"></i> داشبورد</a></li>
                    <li><a href="../../Writer/ListPosts" id="postItem"><i class="fas fa-file-alt"></i> پست‌ها</a></li>
                    <li><a href="../../Writer/ListFiles" id="fileItem"><i class="fas fa-upload"></i> فایل‌های آپلود شده</a></li>
                    <li><a href="../../Account/Logout" id="logoutItem"><i class="fas fa-sign-out-alt"></i> خروج</a></li>
                </ul>
            </nav>

            <!-- محتوای اصلی -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <!-- نوار بالا -->
                <nav class="navbar navbar-expand-lg navbar-dark">
                    <div class="container-fluid">
                        <span class="navbar-brand">پنل نویسندگان سیستم مدیریت محتوا</span>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                    </div>
                </nav>
                @RenderBody()
            </main>
        </div>
    </div>
    <!-- اسکریپت‌های Bootstrap -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    @RenderSection("BottomJS", false)
</body>
</html>
